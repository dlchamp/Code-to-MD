{
  "name": "code-to-markdown",
  "displayName": "Code To Markdown",
  "description": "Copy selected code snippets in ready-to-paste formatting for Discord or Reddit markdown",
  "version": "0.0.2",
  "publisher": "DLCHAMP",
  "author": {
    "name": "DLCHAMP"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dlchamp/Code-to-MD"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:code-to-md.copyToDiscord",
    "onCommand:code-to-md.copyToReddit"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-to-md.copyToDiscord",
        "title": "Copy To Discord"
      },
      {
        "command": "code-to-md.copyToReddit",
        "title": "Copy To Reddit"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "code-to-md.copyToDiscord",
          "when": "editorTextFocus && editorHasSelection",
          "group": "copyPaste@9"
        },
        {
          "command": "code-to-md.copyToReddit",
          "when": "editorTextFocus && editorHasSelection",
          "group": "copyPaste@10"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "json5": "^2.2.2"
  }
}